@{
    ViewData["Title"] = "Presupuesto";
}

<partial name="Alerta" />
<partial name="Cargando" />

<ul class="nav nav-pills mt-4" id="myTab" role="tablist">
    <li class="nav-item nav-item-tabs" role="presentation">
        <a class="nav-link nav-link-tabs active" id="capitulos-tab" data-toggle="tab" data-bs-toggle="pill" data-bs-target="#capitulos" type="button" role="tab" aria-controls="home" aria-selected="true">Por Capitulos</a>
    </li>
    <li class="nav-item nav-item-tabs" role="presentation">
        <a class="nav-link nav-link-tabs" id="subcapitulos-tab" data-toggle="tab" data-bs-toggle="pill" data-bs-target="#subcapitulos" type="button" role="tab" aria-controls="profile" aria-selected="false">Por Subcapitulos</a>
    </li>

</ul>
<div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="capitulos" role="tabpanel" aria-labelledby="capitulos-tab">
        <div class="row mt-3">
            <table class="table table-striped datatable" id="tabla_capitulos" style="width: 100%;">
                <thead class="bg-secondary text-white">
                    <tr>
                        <th>Código Capítulo</th>
                        <th>Capitulo</th>
                        <th>Importe</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
                <tfoot>
                    <tr><th colspan="2" style="text-align:center;">Total</th><th class="text-right"></th></tr>
                </tfoot>
            </table>
        </div>
    </div>
    <div class="tab-pane fade" id="subcapitulos" role="tabpanel" aria-labelledby="subcapitulos-tab">
        <div class="row mt-3 mb-3 card">
            <div class="card-header bg-light">
                <strong><i class="fa fa-filter"></i> FILTROS</strong>
            </div>
            <div class="card-body">
                <span>Capítulo</span>
                <select id="sel_capitulo" class="form-control filtrar w-25">
                </select>
            </div>
        </div>
        <div class="row">
            <table class="table table-striped datatable" id="tabla_subcapitulos" style="width: 100%;">
                <thead class="bg-secondary text-white">
                    <tr>
                        <th>Código Capítulo</th>
                        <th>Capitulo</th>
                        <th>Código Subcapítulo</th>
                        <th>Subcapítulo</th>
                        <th>Importe</th>
                        <th>Modificar</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
                <tfoot>
                    <tr><th colspan="4" style="text-align:center;">Total</th><th class="text-right"></th></tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>


<div id="ventana_importe_subcapitulo" class="modal" role="dialog" data-backdrop="static">
    <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5>Modificar Importe Subcapitulo</h5>
                <button type="button" class="close" data-bs-dismiss="modal">
                    ×
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <input type="text" class="form-control" id="id_subcapitulo" style="display:none;">

                    <label for="importe">Introduce Importe</label>
                    <input type="number" class="form-control" id="importe" placeholder="Introduce importe"  step="0.01">
                </div>

            </div>

            <div class="modal-footer">
                <button type="button" id="btn-save-subcapitulo" class="btn btn-success float-left text-white">
                    Guardar
                </button>
                <button type="button" class="btn btn-warning float-right text-white" data-bs-dismiss="modal">
                    Cerrar
                </button>
            </div>
        </div>
    </div>
</div>


@section Scripts1{
<partial name="_ValidationScriptsPartial" />

<script type="text/javascript">
    modulo_presupuesto.init();
</script>
}